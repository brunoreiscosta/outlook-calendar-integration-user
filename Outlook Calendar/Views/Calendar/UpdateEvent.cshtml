@using Outlook_Calendar.Models;
@model CalendarEvent

<div style="margin-top: 50px;">
    <form method="post" action="UpdateEvent?eventId=@Model.Id">
        <div class="row" style="margin:10px;">
            <label for="Summary" class="col-sm-3">Subject:</label>
            <input type="text" class="col-sm-1 form-control" name="Subject" value="@Model.Subject" autocomplete="off" />
        </div>
        <div class="row" style="margin:10px;">
            <label for="Description" class="col-sm-3">Content:</label>
            <input type="datetime" class="col-sm-1 form-control" name="Body.Content" value="@Model.Body.Content" autocomplete="off" />
        </div>
        <div class="row" style="margin:10px;">
            <label for="Start.DateTime" class="col-sm-3">Start Date Time:</label>
            <input type="datetime" class="col-sm-1 form-control" name="Start.DateTime" value="@Model.Start.DateTime.ToString("yyyy-MM-dd hh:mm tt")" autocomplete="off" />
        </div>
        <div class="row" style="margin:10px;">
            <label for="End.DateTime" class="col-sm-3">End Date Time:</label>
            <input type="datetime" class="col-sm-1 form-control" name="End.DateTime" value="@Model.End.DateTime.ToString("yyyy-MM-dd hh:mm tt")" autocomplete="off" />
        </div>
        <div class="row col-sm-3" style="margin:10px;">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>
